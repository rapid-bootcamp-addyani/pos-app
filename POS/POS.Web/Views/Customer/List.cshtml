@using POS.Repository;
@model IEnumerable<CustomerEntity>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Customer Get All</h2>
<a class="btn btn-sm btn-primary" asp-area="" asp-controller="Customer" asp-action="Create">Create New Customer</a>
<table class="table table-responsive">
    <thead>
        <tr>
            <th>Id</th>
            <th>CompanyName</th>
            <th>ContactName</th>
            <th>ContactTitle</th>
            <th>Address</th>
            <th>City</th>
            <th>Region</th>
            <th>PostalCode</th>
            <th>Country</th>
            <th>Phone</th>
            <th>Fax</th>
            <th>Orders</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.CompanyName</td>
                <td>@item.ContactName</td>
                <td>@item.ContactTitle</td>
                <td>@item.Address</td>
                <td>@item.City</td>

                <td>@item.Region</td>
                <td>@item.PostalCode</td>
                <td>@item.Country</td>

                <td>@item.Phone</td>
                <td>@item.Fax</td>
                <td>
                    @foreach (var data in item.Orders)
                    {
                        <h6>@data.ShipName</h6>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-success">View</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
