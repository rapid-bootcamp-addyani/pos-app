@using POS.ViewModel;
@model ProductModel

@*@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}*@

<form asp-controller="Product" asp-action="Create" method="post">
    <div asp-validation-summary="All"></div>

    <div class="form-group">
        <label asp-for="ProductName"></label>
        <input asp-for="ProductName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="SupplierId"></label>
        <input asp-for="SupplierId" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="CategoryId"></label>
        <input asp-for="CategoryId" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="QuantityPerUnit"></label>
        <input asp-for="QuantityPerUnit" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="UnitPrice"></label>
        <input asp-for="UnitPrice" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="UnitsInStock"></label>
        <input asp-for="UnitsInStock" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="UnitsOnOrder"></label>
        <input asp-for="UnitsOnOrder" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="RecorderLevel"></label>
        <input asp-for="RecorderLevel" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Discountinued">Discountinued</label>
        <select class="form-select" aria-label="Set Discountinued" id="Discountinued" name="Discountinued">
            <option selected>Select Discountinued Here</option>
            <option value="false">False</option>
            <option value="true">True</option>
        </select>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>
